<% provide(:title, 'Utsav Participants') %>
<h1>Utsav Participants</h1>
<div class="table-responsive">
<%= will_paginate %>
  <table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Type of Participation</th>
    <th>Does student have a group?</th>
    <th>Edit Details</th>
    <% if current_user.admin?  %>
      <th>Action</th>
    <% end %>
  </tr>
  <% @utsav_registrations.each do |user| %>
    <tr>
      <td><%= link_to user.name, user, {:style=>"color: black"} %></td>
      <td><%= link_to user.email, user, {:style=>"color: black"} %></td>
      <td><%= link_to user.phone, user, {:style=>"color: black"} %></td>
      <td><%= link_to user.typeofpart, user, {:style=>"color: black"} %></td>
      <td><%= link_to user.group, user, {:style=>"color: black"} %></td>
      <td style="background:blue"><%= link_to "Edit Details", edit_utsav_registration_path(user) %></td>
      <% if current_user.admin? %>
      <td style="background:black"><%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= will_paginate %>
</div>

<% provide(:title, 'Signup') %>
<h1>Student Pickup & Accommodation Request</h1>
<p></br> Thank you for your Interest. Pickup and Accommodation registrations will open in <b>December 2016</b> for <b>Spring 2017</b>.</p>

<% if false %>          <!-- Remove this statement to make the form work again-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@registration) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :fmlocation, "Arriving From" %>
      <%= f.text_field :fmlocation, class: 'form-control' %>
      
      <%= f.label :needpickup, 'Need Pickup?' %>
      <%= f.select :needpickup, [['Yes','yes'],['No','no']], class: 'form-control' %>
      
      <%= f.label :needaccom, 'Need Accommodation?' %>
      <%= f.select :needaccom, [['Yes','yes'],['No','no']], class: 'form-control' %>
      
      <%= f.label :flightno, "Flight Number" %>
      <%= f.text_field :flightno, class: 'form-control' %>
      
      <%= f.label :landingtime, "Flight Landing Date and Time" %>
      <%= f.text_field :landingtime, class: 'form-control', placeholder: "DD/MM/YYYY HH:MM" %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %> 
      
      <%= f.label :password, "PIN" %>
      <%= f.password_field :password, class: 'form-control', placeholder: "4 Digit Number" %>

      <%= f.label :password_confirmation, "PIN Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br/>
      <%= f.submit "Submit my details", class: "btn btn-primary" %>
    <% end %>
    <br/>
  </div>
</div>
<br/>
<p><b>Note: </b>A nominal membership fee of <b>$25</b> will be collected from every student upon arrival .</p>

